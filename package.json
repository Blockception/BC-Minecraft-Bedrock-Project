{
  "name": "bc-minecraft-bedrock-project",
  "version": "1.19.50-1",
  "description": "The typescript library responsible for reading/parsing minecraft bedrock data",
  "main": "./lib/src/main.js",
  "types": "./lib/src/main.d.ts",
  "scripts": {
    "compile": "tsc -b",
    "build": "npm run clean && npm run compile",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test": "mocha --debug-brk",
    "clean": "rimraf lib",
    "pretest": "npm run compile",
    "prepublishOnly": "npm test && npm run compile",
    "preversion": "",
    "postversion": "git push && git push --tags",
    "version": "git add -A src",
    "watch": "tsc -w -p ./src"
  },
  "files": [
    "lib/src/**/*.js",
    "lib/src/**/*.js.map",
    "lib/src/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Blockception/BC-Minecraft-Bedrock-Project.git"
  },
  "keywords": [
    "ts",
    "library",
    "minecraft",
    "bedrock",
    "project"
  ],
  "author": "Blockception Ltd",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/Blockception/BC-Minecraft-Bedrock-Project/issues"
  },
  "homepage": "https://github.com/Blockception/BC-Minecraft-Bedrock-Project#readme",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.11",
    "chai": "^4.3.7",
    "mocha": "^10.0.0",
    "mocha-junit-reporter": "^2.2.0",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "bc-minecraft-bedrock-command": "^1.19.50-0",
    "bc-minecraft-bedrock-types": "^1.19.50-0",
    "bc-minecraft-molang": "^1.19.50-1",
    "bc-minecraft-project": "^1.19.40-1",
    "jsonc": "^2.0.0"
  }
}
